<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/svg_anim_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/svg_anim_clip_bottom_to_top_drawable" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_anim_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="播放动画1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/reset_anim_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="重置动画1"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/svg_anim_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/svg_anim_clip_top_to_bottom_drawable" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_anim_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="播放动画2"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/reset_anim_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="重置动画2"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/svg_anim_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/svg_anim_clip_together_drawable" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/play_anim_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="播放动画3"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/reset_anim_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="重置动画3"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
