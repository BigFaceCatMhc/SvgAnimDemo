<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        >

        <TextView
            android:id="@+id/color_gradient_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:text="SVG颜色渐变动画"
            />

        <TextView
            android:id="@+id/group_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:text="SVG设置group"
            />
        <TextView
            android:id="@+id/three_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:text="SVG三动画"
            />
        <TextView
            android:id="@+id/clip_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:text="SVG切割动画"
            />
        <TextView
            android:id="@+id/shape_change_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:text="SVG形状改变动画"
            />
    </LinearLayout>
</ScrollView>
